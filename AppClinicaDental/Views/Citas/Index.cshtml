@model IEnumerable<AppClinicaDental.Models.Cita>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="text-black-50" >Lista de citas Agendadas</a>
</p>
<table class="table table-hover table-dark">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoPorAdelantado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedimiento)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.MontoIva)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoPorAdelantado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Procedimiento)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MontoIva)
                </td>

                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Cedula">Edit</a> |
                    <a class="btn btn-primary" data-toggle="modal" data-target="#P-@item.Cedula">Detalle</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Cedula">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@foreach (var item in Model)
 {
    //Modal para cada producto
<div id="P-@item.Cedula" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @*Titulo del modal*@
                <h5 class="modal-title">Cita: @item.Nombre</h5>
                <h5 class="modal-title">Cita: @item.Cedula</h5>
                @*Boton para cerrar el modal*@
                <button type="button" class="close" data-dismiss="modal" aria-label="close"></button>
                <span aria-hidden="true">&times;</span>
                @*La & es para caracteres especiales*@
            </div>
            <div class="modal-body">
                <div class="text-left mb-4">
                    <p>Monto Total con I.V.A: @item.MontoIva</p>
                </div>
                <div class="text-left mb-4">
                    <p>Monto total sin I.V.A: @item.MontoTotal</p>
                </div>

                <div class="text-left mb-4">
                    <p>Monto a pagar por adelantado: @item.MontoPorAdelantado</p>
                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div> @*Cierre del modal content*@
    </div>
</div>
} @*Cierre del foreach*@
